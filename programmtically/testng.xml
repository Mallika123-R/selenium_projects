          <include name="GuestInfo"/>
       </methods>
     </class>
      <class name="testcases.Payment_Info">
         <methods>
          <include name="apply_discount"/>
          <include name="makepayment"/>
       </methods>
      </class>
      <class name="testcases.coustmer_comm">
       <methods>
          <include name="check_mail"/>
         
       </methods>
      </class>
        
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
